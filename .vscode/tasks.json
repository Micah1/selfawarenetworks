{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gate: all checks",
      "type": "shell",
      "command": "echo Unsupported platform",
      "windows": {
        "command": "powershell",
        "args": [
          "-ExecutionPolicy", "Bypass",
          "-File", "${workspaceFolder}/scripts/gate.ps1"
        ]
      },
      "linux": {
        "command": "bash",
        "args": ["${workspaceFolder}/scripts/gate.sh"]
      },
      "osx": {
        "command": "bash",
        "args": ["${workspaceFolder}/scripts/gate.sh"]
      },
      "group": { "kind": "test", "isDefault": true },
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    }
  ]
}
